.header
    box-sizing border-box
    height 80px
    width 100%
    padding 0 25px
    border-bottom 1px solid $gray-1
    +below('tablet')
        padding 0
        

    > .logo
        float left
        width 140px
        height 50px
        margin-top 15px
        margin-right 30px
        +below('tablet')
            float none
            display inline-block
            margin-right 0
            margin-left 20px

    > .bars
        display none
        +below('tablet')
            display block
            margin-top: 22px;
            margin-right: 20px;
            font-size: 29px;
            color: #ff1933;

    > .menu
        float left
        list-style-type none
        margin-top 28px
        +below('tablet')
            display none
            margin 0
            width 100%
            text-align center
            background-color $white

            &.-open
                display inline-block

            &:last-child
                padding-bottom 30px

        &.-right
            +above('tablet')
                float right

    > .menu > .item
        display inline-block
        margin-right 35px
        clear: right
        +below('tablet')
            display block
            margin-right 0
            margin-top: 20px;

        &:last-child
            margin-right 0

    > .menu > .item > .link 
        display inline-block
        text-decoration none
        color $red
        font-size 20px
        font-weight bold
    
