.header
    box-sizing border-box
    height 80px
    width 100%
    padding 0 25px
    border-bottom 1px solid $gray-1

    > .logo
        float left
        width 140px
        height 50px
        margin-top 15px
        margin-right 30px

    > .menu
        float left
        list-style-type none
        margin-top 28px

    > .menu > .item
        display inline-block
        margin-right 35px
        clear: right
        &:last-child
            margin-right 0

    > .menu > .item > .link 
        display inline-block
        text-decoration none
        color $red
        font-size 20px
        font-weight bold
    
