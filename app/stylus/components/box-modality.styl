.box-modality
    background-color $white
    height 400px
    margin 60px 20px 10px 0
    padding-top 60px
    padding-right 30px
    padding-left 30px
    box-sizing border-box
    text-align center
    box-shadow #b3b3b3 1px 3px 4px 1px
    +at('mobile')
        margin-left: 8px;
        margin-right: 8px;

    +at('tablet')
        margin-left: 18px;
        margin-right: 18px;

    &:last-child
        margin-right 0

    > .title 
        font-size 32px
        margin-top 0
        color: $gray-2

    > .description
        line-height 1.3