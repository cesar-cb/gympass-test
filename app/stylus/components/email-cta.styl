.email-cta
    background-color $gray-2
    padding-left 180px
    padding-top 30px
    padding-bottom 30px
    box-sizing border-box

    +below('tablet')
        padding-left 20px
        padding-right 20px

    > .title
        display inline-block
        margin-right 30px
        color $white
        font-size 18px
        +below('tablet')
            line-height 1.3

    > .form
        display inline-block
        +below('tablet')  
            width 100%

    > .form > .input 
        display inline-block
        width 450px
        height 50px
        padding 0 20px
        border none
        vertical-align: middle;
        font-size 18px
        color $gray-3
        font-weight bold
        +below('tablet')
            width 100%
            box-sizing border-box
            margin-bottom 15px
    
    > .form  > .button
        display inline-block
        height 50px
        margin 0
        vertical-align: middle;
        margin-left -4px
        +below('tablet')
            display table
            margin 0 auto